set runtimepath+=~/.vim
set runtimepath+=~/vimfiles

" vim の機能だけのベース設定
runtime! tecokimura/basic.vim

" プラグインの読み込み用
runtime! tecokimura/plugins/*.vim

" プラグインなど設定周り
runtime! tecokimura/config.vim

" コマンドやエイリアス
runtime! tecokimura/command.vim

" 環境ごとに変更したい時
runtime! tecokimura/justhere.vim

